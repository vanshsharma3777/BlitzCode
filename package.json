{
  "name": "BiltzCode",
  "private": true,
  "overrides": {
    "drizzle-orm": "0.45.1"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "dev:web": "turbo run dev --filter=web",
    "dev:websocket": "turbo run dev --filter=websocket",
    "dev:worker": "turbo run dev --filter=worker",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push"
  },
  "devDependencies": {
    "drizzle-kit": "^0.31.8",
    "prettier": "^3.7.4",
    "turbo": "^2.7.4",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.6",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "next-auth": "4",
    "postgres": "^3.4.8"
  }
}
